var button=document.getElementById("add")
var black=document.querySelector(".pp")
var pop=document.querySelector(".popbox")
button.addEventListener("click",function(){
    black.style.display="block"
    pop.style.display="block"
})
var add=document.getElementById("addd")
var canclee=document.getElementById("dl")
canclee.addEventListener("click",function(Event){
    Event.preventDefault()
    black.style.display="none"
    pop.style.display="none"
})
var containerx= document.querySelector(".container")
var bookname=document.getElementById("book")
var author=document.getElementById("name")
var disk=document.getElementById("disc")
add.addEventListener("click",function(Event){
    Event.preventDefault()
    var div=document.createElement("div")
    div.setAttribute("class","book-con")
    div.innerHTML=`<h2>${bookname.value}</h2> 
      <p>${author.value}</p>
      <p>${disk.value}</p>
      <button onclick="ds(event)">delete</button>`
    containerx.append(div)
    black.style.display="none"
    pop.style.display="none"
    



})
function ds(Event){
    Event.target.parentElement.remove()
    
}